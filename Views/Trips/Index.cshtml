@model IEnumerable<TripOrganization.Models.Trip>
@{
    ViewData["Title"] = "Index";
    var currentUserId = (string)ViewBag.UserId;
}

<div class="px-4 py-6">
    <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold">Trips</h1>
        <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
            Create New
        </a>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full table-auto border border-gray-300">
            <thead class="bg-gray-100 text-left">
                <tr>
                    <th class="px-4 py-2 border-b">Title</th>
                    <th class="px-4 py-2 border-b">Capacity</th>
                    <th class="px-4 py-2 border-b">Data</th>
                    <th class="px-4 py-2 border-b">Cost</th>
                    <th class="px-4 py-2 border-b">Date</th>
                    <th class="px-4 py-2 border-b">Actions</th>
                </tr>
            </thead>
            <tbody>
@foreach (var item in Model) {
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2 border-b">@Html.DisplayFor(modelItem => item.Title)</td>
                    <td class="px-4 py-2 border-b">@Html.DisplayFor(modelItem => item.Capacity)</td>
                    <td class="px-4 py-2 border-b">@Html.DisplayFor(modelItem => item.Data)</td>
                    <td class="px-4 py-2 border-b">@Html.DisplayFor(modelItem => item.Cost)</td>
                    <td class="px-4 py-2 border-b">@Html.DisplayFor(modelItem => item.Date)</td>
                    <td class="px-4 py-2 border-b space-x-2">
                        @if(item.OwnerId == currentUserId)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-blue-600 hover:underline">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-red-600 hover:underline">Delete</a>
                        }
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-green-600 hover:underline">Details</a>
                    </td>
                </tr>
}
            </tbody>
        </table>
    </div>
</div>
