@model TripOrganization.Models.Trip

@{
    ViewData["Title"] = "Edit";
}

<div class="max-w-2xl mx-auto px-4 py-8">
    <h1 class="text-2xl font-bold mb-4">Edit Trip</h1>

    <form asp-action="Edit" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-600"></div>
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Title" class="block font-medium mb-1"></label>
            <input asp-for="Title" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Capacity" class="block font-medium mb-1"></label>
            <input asp-for="Capacity" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="Capacity" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Data" class="block font-medium mb-1"></label>
            <input asp-for="Data" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="Data" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Cost" class="block font-medium mb-1"></label>
            <input asp-for="Cost" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="Cost" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label asp-for="Date" class="block font-medium mb-1"></label>
            <input asp-for="Date" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-400" />
            <span asp-validation-for="Date" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <input type="submit" value="Save" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" />
        </div>
    </form>

    <div class="mt-4">
        <a asp-action="Index" class="text-blue-600 hover:underline">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
